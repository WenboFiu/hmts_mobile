<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.fiu.hmts_cu.activity.PaymentActivity"
    android:background="@color/colorLightGray">

    <TextView
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:id="@+id/congrat"
        android:background="@drawable/congra"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:id="@+id/congratext"
        android:textSize="27dp"
        android:textColor="@color/colorOrange"
        android:layout_below="@+id/congrat"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/finish"
        android:id="@+id/contpurchase"
        android:textColor="@color/colorLightGray"
        android:background="@color/colorOrange"
        android:textSize="20dp"
        android:height="35dp"
        android:layout_below="@+id/congratext"
        android:layout_marginTop="60dp"
        android:onClick="continueToPurchase" />

</RelativeLayout>
